{
    "name": "quick/inventory",
    "type": "project",
    "description": "Nursery Inventory management software",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.3.2",
        "fruitcake/laravel-cors": "^2.0.5",
        "guzzlehttp/guzzle": "^7.4.1",
        "inertiajs/inertia-laravel": "^0.5.2",
        "laravel/framework": "^9.0",
        "laravel/jetstream": "^2.6.5",
        "laravel/sanctum": "^2.14.0",
        "laravel/tinker": "^2.7",
        "laraveldaily/laravel-invoices": "^3.0",
        "quickbooks/v3-php-sdk": "^6.0.3",
        "tightenco/ziggy": "^1.4.3"
    },
    "require-dev": {
        "spatie/laravel-ignition": "^1.0",
        "fakerphp/faker": "^1.19.1",
        "jasonmccreary/laravel-test-assertions": "^2.1.0",
        "laracasts/cypress": "^1.4.1",
        "mockery/mockery": "^1.5.0",
        "nunomaduro/collision": "^6.1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}