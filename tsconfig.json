{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "module": "ESNext",
        "target": "es2016",
        "lib": ["DOM", "ESNext"],
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "@vuedx/typescript-plugin-vue"
            }
        ],
        "paths": {
            "@/*": ["resources/js/*"]
        }
    },
    "exclude": ["dist", "node_modules", "vendor", "public"]
}
